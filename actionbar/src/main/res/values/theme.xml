<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="ActionBarTheme.Light" parent="ActionBarTheme">
        <item name="android:windowLightStatusBar">true</item>
        <!-- actionbar -->
        <item name="actionbar_title">@color/actionbar_title_light</item>
        <item name="actionbar_indicator">@color/actionbar_title_light</item>
        <item name="actionbar_title_shadow">@color/actionbar_title_light</item>
        <item name="actionbar_background">@color/actionbar_background_light</item>

        <!--actionbar action menu-->
        <item name="actionbar_item_icon">@color/actionbar_item_icon_light</item>
        <item name="actionbar_item">@color/actionbar_item_light</item>
        <item name="actionbar_item_pressed">@color/actionbar_item_pressed_light</item>
        <item name="actionbar_item_text">@color/actionbar_item_text_light</item>

        <!--actionbar popup menu-->
        <item name="actionbar_popup_background">@color/actionbar_popup_background_light</item>
        <item name="actionbar_popup_text">@color/actionbar_popup_text_light</item>
        <item name="actionbar_popup_item">@color/actionbar_popup_item_light</item>
        <item name="actionbar_popup_item_pressed">@color/actionbar_popup_item_pressed_light</item>
        <item name="actionbar_popup_item_driver">@color/actionbar_popup_item_driver_light</item>

        <!--actionbar tab item-->
        <item name="actionbar_tab_bg">@color/actionbar_tab_bg_light</item>
        <item name="actionbar_tab_line">@color/actionbar_tab_line_light</item>
        <item name="actionbar_tab_text">@color/actionbar_tab_text_light</item>
        <item name="actionbar_tab_text_checked">@color/actionbar_tab_text_checked_light</item>

        <!--actionbar action mode-->
        <item name="actionbar_mode_text">@color/actionbar_mode_text_light</item>
        <item name="actionbar_mode_bg">@color/actionbar_mode_bg_light</item>
        <item name="actionbar_mode_bottom_line">@color/actionbar_mode_bottom_line_light</item>
        <item name="actionbar_mode_split">@color/actionbar_mode_split_light</item>
        <item name="actionbar_item_bg_selector">@drawable/actionbar_item_bg_light</item>

        <item name="actionbar_tab_bg_selector">@drawable/actionbar_tab_bg_light</item>

        <item name="actionbar_more">@drawable/actionbar_more_light</item>
        <item name="actionbar_dropdown">@drawable/actionbar_dropdown_light</item>
        <item name="actionbar_dropup">@drawable/actionbar_dropup_light</item>
        <item name="actionbar_clear">@drawable/actionbar_clear_light</item>
        <item name="actionbar_done">@drawable/actionbar_done_light</item>
        <item name="actionbar_refresh">@mipmap/ic_actionbar_refresh_light</item>

        <item name="actionbar_tab_text_selector">@color/actionbar_tab_text_selector_light</item>

    </style>

