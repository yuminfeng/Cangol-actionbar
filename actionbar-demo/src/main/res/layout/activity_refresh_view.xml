<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_refresh_00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/on_refresh" />

            <Button
                android:id="@+id/button_refresh_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/off_refresh" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_refresh_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/on_refresh" />

            <Button
                android:id="@+id/button_refresh_11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/off_refresh" />

        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/button_refresh_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_refresh" />

    <Button
        android:id="@+id/button_refresh_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/stop_refresh" />

</LinearLayout>